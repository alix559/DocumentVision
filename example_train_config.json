{
  "model": {
    "input_size": [640, 640],
    "num_classes": 80,
    "backbone_channels": [32, 64, 128, 256, 512, 1024],
    "neck_channels": 256,
    "anchors_per_scale": 3,
    "confidence_threshold": 0.25,
    "nms_threshold": 0.45
  },
  "training": {
    "learning_rate": 0.001,
    "batch_size": 16,
    "num_epochs": 100,
    "save_interval": 10,
    "validation_interval": 5,
    "early_stopping_patience": 20,
    "gradient_clip_norm": 1.0
  },
  "loss": {
    "lambda_coord": 5.0,
    "lambda_noobj": 0.5,
    "lambda_class": 1.0,
    "lambda_obj": 1.0,
    "focal_loss_alpha": 0.25,
    "focal_loss_gamma": 2.0
  },
  "data": {
    "data_path": "dataset",
    "config_path": "dataset.yaml",
    "augment": true,
    "num_workers": 4,
    "pin_memory": true,
    "prefetch_factor": 2
  },
  "augmentation": {
    "hsv_h": 0.015,
    "hsv_s": 0.7,
    "hsv_v": 0.4,
    "degrees": 0.0,
    "translate": 0.1,
    "scale": 0.5,
    "shear": 0.0,
    "perspective": 0.0,
    "flipud": 0.0,
    "fliplr": 0.5,
    "mosaic": 1.0,
    "mixup": 0.0
  },
  "optimizer": {
    "type": "adam",
    "weight_decay": 0.0005,
    "momentum": 0.937,
    "nesterov": true
  },
  "scheduler": {
    "type": "cosine",
    "warmup_epochs": 3,
    "warmup_momentum": 0.8,
    "warmup_bias_lr": 0.1,
    "min_lr": 0.00001
  },
  "logging": {
    "log_interval": 100,
    "save_images": true,
    "save_interval": 10,
    "tensorboard": true,
    "wandb": false
  },
  "evaluation": {
    "conf_threshold": 0.001,
    "nms_threshold": 0.6,
    "max_det": 300,
    "iou_threshold": 0.5
  },
  "checkpointing": {
    "save_dir": "checkpoints",
    "save_best": true,
    "save_last": true,
    "max_keep": 5
  },
  "hardware": {
    "device": "auto",
    "mixed_precision": true,
    "gradient_accumulation_steps": 1
  }
} 